<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <RelativeLayout
        android:id="@+id/rl_target_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_target_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_im_avatar_default"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/rl_target_voice_line"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_target_avatar">

            <TextView
                android:id="@+id/tv_right_click"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_stroke_gray_6_solid_white_radius_5"
                android:maxWidth="220dp"
                android:minWidth="90dp" />

            <ImageView
                android:id="@+id/iv_target_singer"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/anim_yuyin_sign_target" />

            <TextView
                android:id="@+id/tv_target_voice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv_right_click"
                android:text="60 ''"
                android:textColor="#686666"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_target_red"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_target_voice_time"
                android:src="@drawable/yuyin_tixing_red" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mine_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_mine_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_im_avatar_default"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/rl_mine_voice_line"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_mine_avatar">

            <TextView
                android:id="@+id/tv_left_click"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray_6_solid_white_radius_5"
                android:maxWidth="220dp"
                android:minWidth="90dp" />

            <ImageView
                android:id="@+id/iv_mine_singer"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/anim_yuyin_sign_mine" />


            <TextView
                android:id="@+id/tv_mine_voice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/tv_left_click"
                android:text="60 ''"
                android:textColor="#686666"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_mine_red"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/tv_mine_voice_time"
                android:src="@drawable/yuyin_tixing_red"
                android:visibility="visible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_has_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_mine_voice_line"
            android:layout_alignRight="@+id/rl_mine_voice_line"
            android:paddingTop="5dp"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>

