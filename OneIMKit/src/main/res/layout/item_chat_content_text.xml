<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_im_avatar_default"
        android:scaleType="centerCrop" />

    <com.yryc.imkit.widget.emoji.widget.EmojiTextview
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_avatar"
        android:background="@drawable/selector_message_background"
        android:gravity="center_vertical|left"
        android:maxWidth="150dp"
        android:minHeight="40dp"
        android:padding="10dp"
        android:textColor="@color/selector_selected_black_unselected_white" />

    <TextView
        android:id="@+id/tv_has_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_message"
        android:layout_alignRight="@+id/tv_message"
        android:paddingTop="5dp"
        android:textSize="12sp" />

</RelativeLayout>

